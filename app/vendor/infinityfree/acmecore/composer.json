{
    "name": "infinityfree/acmecore",
    "description": "Raw implementation of the ACME protocol in PHP",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/InfinityFreeHosting/acmecore",
    "keywords": [
        "acmephp",
        "letsencrypt",
        "https",
        "encryption",
        "certificate",
        "ssl",
        "openssl",
        "CSR",
        "x509"
    ],
    "authors": [
        {
            "name": "Titouan Galopin",
            "email": "galopintitouan@gmail.com",
            "homepage": "http://titouangalopin.com"
        },
        {
            "name": "Jérémy Derussé",
            "homepage": "https://twitter.com/jderusse"
        },
        {
            "name": "InfinityFree",
            "homepage": "https://infinityfree.net"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "ext-hash": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "acmephp/ssl": "^2.0",
        "guzzlehttp/guzzle": "^6.0|^7.0",
        "guzzlehttp/psr7": "^1.7|^2.1",
        "lcobucci/jwt": "^3.3|^4.0",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0|^2.0|^3.0",
        "webmozart/assert": "^1.0"
    },
    "require-dev": {
        "aws/aws-sdk-php": "^3.38",
        "league/flysystem": "^1.0.19",
        "league/flysystem-memory": "^1.0",
        "phpspec/prophecy": "^1.9",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.0",
        "symfony/console": "^5.0",
        "symfony/dependency-injection": "^5.0",
        "symfony/filesystem": "^5.0",
        "symfony/finder": "^5.0",
        "symfony/phpunit-bridge": "^5.0",
        "symfony/var-dumper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "InfinityFree\\AcmeCore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\AcmeCore\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
