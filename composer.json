{
  "name": "nxtd-dev/dash",
  "description": "Dashboard project",
  "type": "project",
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.9",
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpunit/phpunit": "^9.5"
  },
  "autoload": {
    "psr-4": {
      "Nxtd\\Dash\\": "app/"
    }
  },
  "scripts": {
    "cs:fix": "vendor/bin/php-cs-fixer fix --config=.php_cs.dist.php",
    "cs:check": "vendor/bin/php-cs-fixer fix --dry-run --diff --config=.php_cs.dist.php",
    "analyze": "vendor/bin/phpstan analyse -c phpstan.neon"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}